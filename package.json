{
	"name": "neo-brutalism-blog-backend",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start": "NODE_ENV=development nodemon --config package.json -e css,html,js server.js",
		"start:prod": "NODE_ENV=production nodemon server.js",
		"lint": "eslint . --fix --max-warnings=0",
		"format": "prettier . --write",
		"prepare": "husky"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"type": "module",
	"dependencies": {
		"chokidar": "^3.6.0",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"mongoose": "^8.14.1",
		"morgan": "^1.10.0",
		"ndb": "^1.1.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.24.0",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.2",
		"globals": "^16.0.0",
		"lint-staged": "^16.0.0",
		"prettier": "3.5.3"
	},
	"nodemonConfig": {
		"ignore": [
			"*.md",
			"node_modules"
		],
		"delay": 2500
	}
}
